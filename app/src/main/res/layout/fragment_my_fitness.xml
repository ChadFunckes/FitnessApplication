<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="ismgapps.fitnessapplication.MyFitness">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Welcome"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/nameText"
            android:layout_toRightOf="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name"
            android:layout_gravity="right|top"
            android:layout_marginTop="20dp" />

        <View
            android:layout_below="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7c7c7c"
            android:layout_marginTop="20dp"
            android:id="@+id/line" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Starting Weight:"
            android:id="@+id/StartingWeightText"
            android:layout_alignTop="@+id/line"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp"
            />

        <View
            android:layout_below="@+id/StartingWeightText"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7c7c7c"
            android:layout_marginTop="2dp"
            android:id="@+id/line1.1" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Current Weight:"
            android:id="@+id/currWeightText"
            android:layout_alignTop="@+id/line1.1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="100 "
            android:id="@+id/startWeight"
            android:layout_below="@+id/line"
            android:layout_toEndOf="@+id/currWeightText"
            android:layout_marginTop="3dp"
            android:textColor="#9e9e9e" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="lbs"
            android:id="@+id/textView6.1"
            android:layout_below="@+id/line"
            android:layout_toEndOf="@+id/currWeight"
            android:layout_marginTop="3dp"
            android:textColor="#9e9e9e" />

        <View
            android:layout_below="@+id/currWeightText"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7c7c7c"
            android:layout_marginTop="2dp"
            android:id="@+id/line1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="100 "
            android:id="@+id/currWeight"
            android:layout_below="@+id/line1.1"
            android:layout_toEndOf="@+id/currWeightText"
            android:layout_marginTop="3dp"
            android:textColor="#9e9e9e" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="lbs"
            android:id="@+id/textView6"
            android:layout_below="@+id/line1.1"
            android:layout_toEndOf="@+id/currWeight"
            android:layout_marginTop="3dp"
            android:textColor="#9e9e9e" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="BMI:"
            android:id="@+id/BMIText"
            android:layout_below="@+id/line1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="BMI"
            android:id="@+id/BMI"
            android:layout_alignTop="@+id/BMIText"
            android:layout_toEndOf="@+id/BMIText"
            android:textColor="#9e9e9e" />

        <View
            android:layout_below="@+id/BMIText"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7c7c7c"
            android:layout_marginTop="2dp"
            android:id="@+id/line2" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="BMR:"
            android:id="@+id/BMRText"
            android:layout_below="@+id/line2"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="BMR"
            android:id="@+id/BMR"
            android:textColor="#9e9e9e"
            android:layout_alignTop="@+id/BMRText"
            android:layout_toEndOf="@+id/BMRText"
            android:layout_marginTop="3dp" />

        <View
            android:layout_below="@+id/BMRText"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7c7c7c"
            android:layout_marginTop="2dp"
            android:id="@+id/line3" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Daily Calories:"
            android:id="@+id/caloriesText"
            android:layout_below="@+id/line3"
            android:layout_alignParentStart="true"
            android:layout_marginTop="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Calories"
            android:id="@+id/calories"
            android:textColor="#9e9e9e"
            android:layout_alignTop="@+id/caloriesText"
            android:layout_toEndOf="@+id/caloriesText"
            android:layout_marginTop="3dp" />

        <View
            android:layout_below="@+id/caloriesText"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7c7c7c"
            android:layout_marginTop="2dp"
            android:id="@+id/line4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Total Pounds Lost"
            android:id="@+id/lostWeightText"
            android:layout_below="@+id/line4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="000"
            android:id="@+id/lostWeight"
            android:layout_below="@+id/lostWeightText"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="lbs"
            android:id="@+id/lostWeightLBS"
            android:layout_below="@+id/lostWeightText"
            android:layout_toRightOf="@+id/lostWeight"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>

    </ScrollView>

</FrameLayout>
